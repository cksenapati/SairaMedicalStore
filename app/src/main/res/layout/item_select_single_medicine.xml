<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/regular_margin"
    android:background="@color/tw__solid_white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view_single_medicine"
        android:layout_width="@dimen/single_medicine_image_width"
        android:layout_height="@dimen/single_medicine_image_width" />
    <LinearLayout
        android:layout_marginLeft="@dimen/double_extra_small_margin"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_view_single_medicine_name"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/text_view_single_medicine_manufacturer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/text_view_single_medicine_type"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/text_view_single_medicine_price_per_pack"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_view_single_medicine_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="@dimen/extra_small_margin"
        android:textSize="@dimen/small_text_size"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/image_view_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:src="@drawable/ic_added"/>

</LinearLayout>
