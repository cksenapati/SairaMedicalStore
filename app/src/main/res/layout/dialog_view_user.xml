<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1A000000"
    android:padding="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view_close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@android:drawable/ic_delete"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/regular_margin"
                android:layout_marginTop="@dimen/regular_margin"
                android:elevation="12dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                app:cardCornerRadius="@dimen/corner_radius_big_logo">

                <ImageView
                    android:id="@+id/image_view_user_profile_pic"
                    android:layout_width="@dimen/big_logo_image_width"
                    android:layout_height="@dimen/big_logo_image_height"
                    android:src="@drawable/bigbang" />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/text_view_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/double_extra_small_margin"
                android:textSize="@dimen/small_text_size"/>

            <TextView
                android:id="@+id/text_view_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/double_extra_small_margin"
                android:textSize="@dimen/small_text_size"/>

            <TextView
                android:id="@+id/text_view_user_phone_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/double_extra_small_margin"
                android:textSize="@dimen/small_text_size"
                android:gravity="center"/>

            <Spinner
                android:id="@+id/spinner_user_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_spinner"
                android:popupBackground="#B3BBCC"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/double_extra_small_margin">
            </Spinner>

            <Spinner
                android:id="@+id/spinner_user_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_spinner"
                android:popupBackground="#B3BBCC"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/extra_small_margin"
                android:padding="@dimen/double_extra_small_margin">
            </Spinner>


            <TextView
                android:id="@+id/text_view_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/double_extra_small_margin"
                android:textSize="@dimen/small_text_size"
                android:layout_marginTop="@dimen/small_margin"
                android:background="@color/primary"
                android:gravity="center"
                android:textColor="@color/tw__solid_white"
                android:text="Update"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>