<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/regular_margin"
    android:background="@color/tw__solid_white"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_view_name_and_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:text="Odagaon, 752081"
            android:padding="@dimen/extra_small_margin"/>
        <TextView
            android:id="@+id/text_view_district_state_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/extra_small_text_size"
            android:text="Nayagarh, Odisha, India"
            android:paddingBottom="@dimen/extra_small_margin"
            android:paddingLeft="@dimen/extra_small_margin"/>

    </LinearLayout>


</LinearLayout>
