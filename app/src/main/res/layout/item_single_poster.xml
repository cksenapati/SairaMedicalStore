<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/regular_margin"
    android:background="@color/tw__solid_white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view_single_poster"
        android:layout_width="@dimen/single_medicine_image_width"
        android:layout_height="@dimen/single_medicine_image_width" />
    <TextView
        android:id="@+id/text_view_single_poster_name"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="@dimen/extra_small_text_size"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

</LinearLayout>
