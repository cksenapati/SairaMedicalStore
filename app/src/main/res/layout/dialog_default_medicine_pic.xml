<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1A000000"
    android:padding="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view_close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@android:drawable/ic_delete"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/card_view_default_medicine_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/regular_margin"
            android:layout_marginTop="@dimen/regular_margin"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="@dimen/corner_radius_big_logo">

            <RelativeLayout
                android:layout_width="@dimen/big_logo_image_width"
                android:layout_height="@dimen/big_logo_image_height">
                <ImageView
                    android:id="@+id/image_view_default_medicine_pic"
                    android:layout_width="@dimen/big_logo_image_width"
                    android:layout_height="@dimen/big_logo_image_height" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_fetch_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    style="@style/FAB"
                    android:src="@drawable/ic_edit_48" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>





        <EditText
            android:id="@+id/edit_text_medicine_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Medicine Type"
            android:background="@color/tw__solid_white"
            android:padding="@dimen/double_extra_small_margin"
            android:textSize="@dimen/small_text_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_view_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/double_extra_small_margin"
        android:textSize="@dimen/small_text_size"
        android:layout_marginTop="@dimen/small_margin"
        android:background="@color/primary"
        android:gravity="center"
        android:textColor="@color/tw__solid_white"
        android:text="Add"/>



</LinearLayout>