<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/regular_margin"
    android:background="@color/tw__solid_white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/text_view_order_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/double_extra_small_margin"
        android:textStyle="bold"
        android:textSize="@dimen/small_text_size"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/double_extra_small_margin"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_view_order_placed_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_view_order_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text_size"
                android:paddingTop="@dimen/extra_small_margin"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text_view_order_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="center"
            android:drawableRight="@drawable/ic_go_next_24"
            android:textSize="@dimen/extra_small_text_size"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
