<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.sairamedicalstore.ui.profile.MyProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_dark"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center_horizontal"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@color/tw__solid_white"
            android:gravity="center_horizontal"
            app:popupTheme="@style/AppTheme.PopupOverlay">
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/regular_margin"
        android:layout_marginTop="@dimen/regular_margin"
        android:elevation="12dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="@dimen/corner_radius_big_logo">

        <ImageView
            android:id="@+id/image_view_user_profile_pic"
            android:layout_width="@dimen/big_logo_image_width"
            android:layout_height="@dimen/big_logo_image_height"
            android:src="@drawable/bigbang" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/text_view_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/extra_small_margin"
        android:layout_margin="@dimen/extra_small_margin"
        android:background="@color/tw__solid_white"
        android:textSize="@dimen/small_text_size"
        android:text="My Name"/>

    <TextView
        android:id="@+id/text_view_user_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/extra_small_margin"
        android:padding="@dimen/extra_small_margin"
        android:background="@color/tw__solid_white"
        android:textSize="@dimen/small_text_size"
        android:text="My email id"/>

    <LinearLayout
        android:id="@+id/linear_layout_user_phone_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/extra_small_margin"
        android:background="@color/tw__solid_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_view_user_phone_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/extra_small_margin"
            android:textSize="@dimen/small_text_size"
            android:text="My phone no"/>

        <ImageView
            android:id="@+id/image_view_edit_user_phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/extra_small_margin"
            android:layout_gravity="center"
            android:src="@drawable/ic_edit_24"/>
    </LinearLayout>


</LinearLayout>