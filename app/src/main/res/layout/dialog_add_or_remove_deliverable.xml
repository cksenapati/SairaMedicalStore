<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1A000000"
    android:padding="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view_close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@android:drawable/ic_delete"/>


    <TextView
        android:id="@+id/text_view_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="752081, odagaon, Nayagarh, Odisha, India"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="@dimen/extra_small_margin"
        android:layout_margin="@dimen/extra_small_margin"/>

    <EditText
        android:id="@+id/edit_text_delivery_charge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/extra_small_margin"
        android:layout_margin="@dimen/extra_small_margin"
        android:background="@color/tw__solid_white"
        android:gravity="center"
        android:hint="Delivery Charge"
        android:inputType="numberDecimal"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/text_view_add_or_update_deliverable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Deliverable"
        android:textColor="@color/success_message_text_color"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="@dimen/extra_small_margin"
        android:layout_margin="@dimen/extra_small_margin"
        android:background="@color/success_message_background_color"/>
    <TextView
        android:id="@+id/text_view_remove_from_deliverable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove From Deliverable"
        android:textColor="@color/fail_message_text_color"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="@dimen/extra_small_margin"
        android:layout_margin="@dimen/extra_small_margin"
        android:background="@color/fail_message_background_color"/>




</LinearLayout>