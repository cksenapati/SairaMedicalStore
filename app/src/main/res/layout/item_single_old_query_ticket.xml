<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/regular_margin"
    android:background="@color/tw__solid_white"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_view_query_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:text="Query Title"
            android:padding="@dimen/extra_small_margin"/>
        <TextView
            android:id="@+id/text_view_query_posted_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/extra_small_text_size"
            android:text="10th may 1994"
            android:paddingBottom="@dimen/extra_small_margin"
            android:paddingLeft="@dimen/extra_small_margin"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_view_query_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        android:layout_gravity="center_vertical"
        android:text="Active"
        android:padding="@dimen/extra_small_margin"/>




</LinearLayout>
